{{#foreach posts}}

<article class="post-index post">
  <header>
    <h2><a href="{{url}}">{{title}}</a></h2>
    <div class="meta">
      <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
      &nbsp;&bull;&nbsp;{{tags prefix=" Filed under "}}
    </div>
  </header>

  {{#has tag="#long"}}
    <section class="post-excerpt">
        <p>{{excerpt}} <a class="keep-reading" href="{{url}}">read on...</a></p>
    </section>
  {{else}}
    <section class="post">
      {{content}}
    </section>
  {{/has}}
</article>

{{/foreach}}

{{pagination}}
